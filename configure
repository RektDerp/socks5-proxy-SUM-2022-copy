#!/usr/bin/bash

root=$( dirname -- "$0"; )

clean () {
  rm -rf lib/*.a build/* *.db *.log installer/arch/pkg installer/arch/src installer/arch/*.zst
}
invalid () {
  printf "%s\nusage: x[" $1
}


cnt=0
for i in "$@"; do
  case $i in
    windows | Windows | WINDOWS)
        if [ $linux == "true" ]
        then
          invalid "cannnot compile for multiple platforms"
        else
          windows=true
        fi
    ;;
    Linux | linux | LINUX)
        if [ $cnt == 0 ]
        then
          linux=true
        else
          invalid
        fi
    ;;
    clean)
    ;;
    *)
      invalid "Invalid command"
    ;;
  esac
  cnt=$($cnt + 1)
done









