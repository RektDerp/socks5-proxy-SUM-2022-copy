#!/usr/bin/bash

clean () {
    rm -rf lib/*.a CMakeFiles CMakeCache.txt cmake_install.cmake Makefile *.db bin/*
}

case $1 in
    windows | Windows | WINDOWS)
        clean
        if [ $2 == "static-sqlite" | $2 == "--static-sqlite" ]
        then
            echo "static sqlite"
        fi
        cmake . -D CMAKE_SYSTEM_NAME="Windows" -D CMAKE_CXX_COMPILER=x86_64-w64-mingw32-g++ -D CMAKE_C_COMPILER=x86_64-w64-mingw32-gcc -D CMAKE_HOST_SYSTEM_NAME="UNIX"
        cp lib/dll/sqlite3.dll bin
        cp lib/dll/libssp-0.dll bin
        ;;
    Linux | linux | LINUX | "")
        clean
        cmake .
        ;;
    clean)
        clean
    ;;
    *)
        echo "usage: ./configure <linux | windows> <cmake_args>
        ./configure clean"
        ;;
esac
